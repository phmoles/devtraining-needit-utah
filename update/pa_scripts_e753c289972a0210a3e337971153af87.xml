<?xml version="1.0" encoding="UTF-8"?><record_update sys_domain="global" table="pa_scripts">
    <pa_scripts action="INSERT_OR_UPDATE">
        <arguments>opened_at</arguments>
        <description>Extract the day of the month from the When needed date.</description>
        <name>Tasks.day</name>
        <script><![CDATA[whichDay = function(){
  
    //Create a open at object from the GlideDateTime class.  The value
    //of opened at is the Opened date from the sc_tasks record.
    var openAt = new GlideDateTime(current.opened_at);
    
    //Return the day of the month part of the open at object
    return openAt.getDayOfMonthLocalTime();
    
  }; 
  
  whichDay();]]></script>
